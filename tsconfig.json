{
  "include": ["parcel.d.ts", "config.ts", "components/**/*", "apps/**/*"],
  "exclude": ["**/node_modules/", "**/dist", "**/build"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM"],
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "~*": ["./*"],
      "/*": ["./*"],
    },
    "moduleResolution": "Node",
    "skipLibCheck": true
  }
}